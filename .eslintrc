parser: 'babel-eslint'

extends: 'airbnb-base'

env:
  es6: true
  node: true
  jasmine: true
  jest: true

rules:
  # Ignore Rules
  no-console: 0
  arrow-body-style: 0
  no-underscore-dangle: 0
  no-use-before-define: 0
  no-param-reassign: 0
  global-require: 0
  import/no-unresolved: 0
  import/no-extraneous-dependencies: 0
  max-len: 0
  prefer-rest-params: 0
  arrow-parens: 0
  import/extensions: 0
  class-methods-use-this: 0