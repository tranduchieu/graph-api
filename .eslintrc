parser: 'babel-eslint'

extends: 'airbnb-base'

env:
  es6: true
  node: true
  mocha: true

rules:
  # Ignore Rules
  no-console: 0
  arrow-body-style: 0
  no-underscore-dangle: 0
  no-use-before-define: 0
  no-param-reassign: 0
  global-require: 0
  import/no-unresolved: 0
  import/no-extraneous-dependencies: 0